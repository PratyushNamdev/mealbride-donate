{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@ui": ["components/ui"],
      "@ui/*": ["components/ui/*"],
      "@atoms": ["components/atoms"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules": ["components/molecules"],
      "@molecules/*": ["components/molecules/*"],
      "@layout": ["components/layout"],
      "@layout/*": ["components/layout/*"],
      "@OTPHooks": ["apiCalls/OTP/hooks"],
      "@OTPHooks/*": ["apiCalls/OTP/hooks/*"],
      "@MealHooks": ["apiCalls/meals/hooks"],
      "@MealHooks/*": ["apiCalls/meals/hooks/*"],
      "@UserHooks": ["apiCalls/user/hooks"],
      "@UserHooks/*": ["apiCalls/user/hooks/*"],
      "@DonorHooks": ["apiCalls/donor/hooks"],
      "@DonorHooks/*": ["apiCalls/donor/hooks/*"],
      "@Events": ["events"],
      "@Events/*": ["events/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
